<data>
    <xpath expr="/form/notebook/page[@id='sale']/field[@name='sale_uom']"
        position="after">
        <label name="training"/>
        <field name="training"/>
    </xpath>
    <xpath expr="/form/notebook/page[@id='sale']" position="after">
        <page string="Training"
            states="{'invisible': Not(Bool(Eval('training')))}"
            id="training">
            <label name="training_start_date"/>
            <field name="training_start_date"/>
            <label name="training_end_date"/>
            <field name="training_end_date"/>
            <label name="training_registration"/>
            <field name="training_registration"/>
            <label name="training_place"/>
            <field name="training_place"/>
            <label name="training_seats"/>
            <field name="training_seats"/>
            <separator name="training_note" colspan="6"/>
            <field name="training_note" colspan="6"/>
        </page>
    </xpath>
</data>

